script(type='application/ld+json').
  {
  "@context": "http://schema.org",
  "@type": "Book",
  {block:IfSectionDetailsISBN}
  "isbn": "{text:SectionDetails ISBN}",
  {/block:IfSectionDetailsISBN}
  {block:IfFormatEbook}
  "bookFormat": "http://schema.org/EBook",
  {/block:IfFormatEbook}
  "inLanguage": "{select:BookLanguage}",
